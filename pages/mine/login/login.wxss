page {
    background-color: #F5F5F5;
    height: 100%;
    width: 100%;
}
.registernow {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 200rpx;
    width: 35%;
    text-align: center;
    height: 100rpx;
    font-size: 40rpx;
    margin-left: auto;
    margin-right: auto;
    border-radius: 4rpx;
    border: 2rpx solid #137FC1;
    /*background-color: #fff;*/
    line-height: 100rpx;
    opacity: 0.8;
}
.reg_text {
    color: #137FC1;
    font-size: 40rpx;
}
.weui-label {
    font-size: 36rpx;
    width: 180rpx;
    color: #747374;
}
.weui-input {
    font-size: 36rpx;
    /*color: #ccc;*/
}
.weui-btn {
    width: 96%;
    height: 100rpx;
    font-size: 40rpx;
    border-radius: 4rpx;
    border: 2rpx solid #fff;
    color: white;
    background-color: #137FC1;
    line-height: 100rpx;
    opacity: 0.8;
}
.weui-btn:first-child {
    margin-top: 60rpx;
}
.weui-cells.weui-cells_after-title{
    margin-top: 200rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border-radius: 4rpx;
    border: 1rpx solid #ccc;
}
.weui-cell_input {
    height: 100rpx;
    width: 600rpx;
}
.weui-cells::after {
    border-bottom: 0;
}
.weui-cells::before  {
    border-top: 0;
}
/*提示框*/
.myToast{
  width:auto;
  height:130rpx;
  line-height: 130rpx;
  padding: 0 10rpx 0 10rpx;
  top: 50%;
  left: 50%;
  margin: -50px 0 0 -50px;
  border-radius:20rpx;
  background-color: rgb(114,113,113);
  color:rgb(255,255,255);
  font-size: 32rpx;
  text-align: center;
  position: fixed;
  z-index: 100;
  opacity: 0.85;
}