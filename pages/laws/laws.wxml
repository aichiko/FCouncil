<!--pages/laws/laws.wxml-->
<!--筛选功能-->
<view class="page">
    <view class="filter__bg">
        <view bindtap="filterAction" data-hi="{{index}}" class="filter__item {{shownavindex == index? 'active' : ''}}" wx:for-items="{{filterArray}}" wx:key="{{index}}">
            <view id="filter_{{index}}" class="content">{{filterArray[index]}}</view>
            <view class="icon"></view>
        </view>
    </view>
    <view class="temp temp1 {{nzopen ? 'slidown' : 'slidup'}} {{nzshow ? 'disappear':''}}">
        <view data-filter="{{index}}" wx:for="{{content[shownavindex]}}" bindtap="filterItemAction" class="weui-cell__bd weui-cell_primary">
            {{item}}
        </view>
    </view>
    <view hidden="{{!nzopen}}" class="fullbg {{isfull ?'fullopacity':''}}" bindtap="hidebg"></view>
</view>
<view class="weui-panel weui-panel_access {{nzopen ?'hidden':''}}">
    <view class="weui-panel__bd">
        <block wx:for-items="{{lawsList}}" wx:key="{{index}}">
            <view class="weui-media-box weui-media-box_text" bindtap="toLawDetail" data-detailid="{{index}}">
                <view class="weui-media-box__title weui-media-box__title_in-text" style="font-size:28rpx">{{lawsList[index].Title}}</view>
                <!--<view class="weui-media-box__desc">{{lawsList[index].Content}}</view>-->
                <view class="weui-media-box__info">
                    <view class=" weui-media-box__info__meta" style="font-size:24rpx;line-height:24rpx;">时间:{{lawsList[index].AddDate}}</view>
                    <view class="weui-media-box__info__meta" style="font-size:24rpx;line-height:24rpx;">类型：{{lawsList[index].classDesc}}</view>
                </view>
            </view>
        </block>
    </view>
</view>