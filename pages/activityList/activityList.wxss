/*列表item*/
.weui-panel {
    margin-top: 0;
}
.view{
    overflow: visible;
}

.page{
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    height: 100%;
    background: #fff;
    overflow: hidden;
}

.hidden {
    overflow: hidden;
    position: fixed
}

.filter__bg {
    position: relative;
    z-index: 99;
    display: flex;
    border-top: 1px solid #d1d3d4;
    border-bottom: 1px solid #d1d3d4;
    background: #fff;
}

.filter__item {
    width: 187rpx;
    height: 60rpx;
    position: relative;
    float: left;
    top: 0;
    text-align: center;
    border-right: 1rpx solid #D9D9D9;
    /*border-bottom: 1rpx solid #D9D9D9;*/
    padding-top: 5rpx;
    align-items: center;
    display: flex;
    flex: 1;
    justify-content:center;
    font-size: 28rpx;
}

.content{
    display: inline-block;
}
.icon{
    display: inline-block;
    border: 8rpx solid transparent;
    border-top: 8rpx solid #9b9b9b;
    margin-left: 10rpx;
}

.filter__item.active .content{
    color: #61beff;
}
.filter__item.active .icon{
    border-bottom: 8rpx solid #61beff;
    border-top:0;
}

.temp{
    position: fixed;
    z-index: 4;
}
.temp1{
    display: none;
    width: 100%;
    max-height: 550rpx;
    overflow-y: scroll;
    padding: 0 0 0 20rpx;
    line-height:100rpx;
    background: #fff;
}

.temp view{
    border-bottom: 1rpx solid #d1d3d4;
    font-size: 34rpx;
    color: #666;
}

.fullbg{
    position: fixed;
    top:0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgb(1, 1, 1);
    transition: all 2s;
    opacity: 0;
}
.fullopacity{
    opacity: 0.5;
}
.view{
    word-break:break-all; 
    overflow:visible;
}
.weui-media-box__title_in-text {
    width:auto;
    overflow:visible;
    white-space: normal;
    word-wrap:normal;
    word-break:break-all;
    font-size: 28rpx;
    line-height: 30rpx;
    margin-bottom: 0;
}
.weui-media-box__info {
    margin-top: 10rpx;
}
.weui-media-box__info__meta{
    font-size: 24rpx;
    line-height: 24rpx;
    float: none;
    color: #747374;
}
.top {
    padding-right: 0;
}
.time {
    float: left;
    padding: 2rpx;
}
.city {
    /*display: inline-block;*/
    float: left;
    padding: 10rpx 10rpx 0rpx 0;

}
.classdesc {
    padding: 10rpx 10rpx 0rpx 20rpx;
    float: left;
}
.account {
    padding: 10rpx 0 0rpx 0;
    float: right;
    color: #DF3C43;
}
.status_text{
    float: right;
    padding: 2rpx;
    border-radius: 2rpx;
    font-size: 24rpx;
    border: 1rpx solid #B3B3B3;
    color: #747374;
}
